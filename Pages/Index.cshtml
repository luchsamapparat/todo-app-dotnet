@page
@model IndexModel
@{
    ViewData["Title"] = "Tasks";
}

<!-- TODO: th:if="${tasks.empty}" -->
<p class="empty-task-list alert alert-success mb-5" role="alert">All done!</p>

<!-- TODO: th:if="${!tasks.empty}" th:action="{/tasks/completed}" -->
<form method="post" class="task-list mb-5">
    <ul class="list-unstyled">
        <!-- TODO: th:each="task : ${tasks}" -->
        <li class="form-check">
            <!-- TODO: th:id="${'completedTasks-' + task.id}" th:value="${task.id}" -->
            <input type="checkbox" name="completedTasks[]" class="form-check-input completed-task" />
            <!-- TODO: th:for="${'completedTasks-' + task.id}" -->
            <label class="form-check-label">
                <!-- TODO: th:text="${task.description}" -->
                <span></span>
                <!-- TODO: th:if="${task.dueDate}" th:text="${DateUtils.formatShortDate(task.dueDate, locale)}" -->
                <span class="text-secondary ps-2"></span>
            </label>
        </li>
    </ul>

    <button class="mark-as-completed btn btn-primary">Mark as Completed</button>
</form>

<!-- TODO: th:action="{/tasks}" th:object="${taskForm}" -->
<form method="post" class="add-task-form row needs-validation was-validated">
    <div class="col-xl-9 col-lg-8 col-md-6 col-sm-6 mb-3">
        <label for="addTask-description" class="form-label">New Task</label>
        <!-- TODO: th:field="*{description}" th:errorclass="is-invalid" -->
        <input type="text" id="addTask-description" class="form-control description" placeholder="Add a Task..." required minlength="1" />
        <!-- TODO: th:if="${#fields.hasErrors('description')}" th:errors="*{description}" -->
        <div class="invalid-feedback"></div>
    </div>

    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-4 mb-3">
        <label for="addTask-dueDate" class="form-label">Due Date</label>
        <!-- TODO: th:field="*{dueDate}" th:errorclass="is-invalid" th:min="${DateUtils.formatIsoDate(DateUtils.now())}" -->
        <input type="date" id="addTask-dueDate" class="form-control due-date" />
        <!-- TODO: th:if="${#fields.hasErrors('dueDate')}" th:errors="*{dueDate}" -->
        <div class="invalid-feedback"></div>
    </div>

    <div class="col-xl-1 col-lg-1 col-md-2 col-sm-2 mb-3 d-flex flex-wrap align-content-start">
        <button class="add-task btn btn-primary flex-fill" style="margin-top: 32px">
            Add
            <span class="d-sm-none">Task</span>
        </button>
    </div>
</form>